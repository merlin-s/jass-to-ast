{
    "compilerOptions": {
      "esModuleInterop": true,
      "target": "ES2020",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": { "*": [ "node_modules/*" ] },
      "typeRoots": [
        "node_modules/@types",
        "src/@types"
      ],
      "strict": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      // "strictBindCallApply": true,
      "lib": [ "ES2020", "dom" ],
      "allowJs": true
    },
    "include": [ "src" ],
    "exclude": [ "**/*.test.ts" ]
  }
  